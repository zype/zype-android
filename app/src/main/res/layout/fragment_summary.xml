<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zype.android.ui.video_details.fragments.summary.SummaryFragment"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:id="@+id/textVideoTitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            tools:text="Video Title"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:id="@+id/buttonPlayTrailer"
            android:text="@string/video_detail_button_play_trailer"
            style="@style/Widget.AppCompat.Button.Colored"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textVideoEpisode"
            android:layout_marginBottom="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:text="Video Episode"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textVideoDescription"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            tools:text="Video description"
            />
